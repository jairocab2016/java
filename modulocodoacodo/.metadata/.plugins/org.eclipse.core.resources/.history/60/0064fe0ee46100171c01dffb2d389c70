import controlador.Logica;
import modelo.Empleado;
import vista.Pantalla;

public class Aplicacion {
	
	public static void main(String[] args) {
		
		Logica logica = new Logica();
		Pantalla pantalla = new Pantalla();
		Empleado empleado;
		
		String personaBuscada = pantalla.ingresarValor("Ingresar nombre de persona a buscar"); 
		
		empleado = logica.buscarPorNombre(personaBuscada);
		pantalla.mostrarMensaje(empleado.getNombre());
		pantalla.mostrarMensaje(empleado);
		
	}

}
