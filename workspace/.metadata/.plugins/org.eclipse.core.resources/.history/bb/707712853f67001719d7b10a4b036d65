
public class HolaMundoTest
{
	public static void main(String[] args) 
	{
		int [] codigos;
		
		codigos = new int[5];
		
		codigos[0] = 1;
		
		try 
		{
			System.out.println(codigos[5]);
		} catch (Exception e) 
		{
			System.out.println("Excedio el tamaño del arreglo, el arreglo es de " +  codigos.length);
		}
		
		
	}
}